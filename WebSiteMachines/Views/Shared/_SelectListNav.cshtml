@using WebSiteMachines.Interfaces
@inject ICategoryService _categoryService;
@{
    var dropDownCategories = await _categoryService.GetAllCategories();
}

<li class="dropdown">
    <a href="Category/DropdownSolution">Solutions</a>
        <ul class="submenu">
            @foreach (var item in Model.dropDownCategories)
            {
                <li>
                    <a asp-controller="Category" asp-action="DropdownSolutionItems" asp-route-id="@item.Id">
                        @item.Name
                    </a>
                </li>
            }
        </ul>
    
</li>
