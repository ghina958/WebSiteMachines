@{
    ViewData["Title"] = "Access Denied";
}

<div class="access-denied-container" style=" text-align: center;
    margin: 50px auto;
    padding: 20px;
    max-width: 500px;
    border: 1px solid #ccc;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #f8f9fa;">

    <h1 class="error-title" style=" font-size: 2rem;
    color: #dc3545;
    margin-bottom: 20px;">
        Access Denied
    </h1>
    <p class="error-message" style="font-size: 1.2rem;
    color: #6c757d;
    margin-bottom: 20px;">You do not have sufficient permissions to view this page.</p>

    <a href="/Home/Home" class="home-link" style=" display: inline-block;
    font-size: 1rem;
    color: #007bff;
    text-decoration: none;
    padding: 10px 20px;
    border: 1px solid #007bff;
    border-radius: 5px;
    transition: all 0.3s ease;">Return to Home Page</a>
</div>