@model Category

@{
    ViewData["Title"] = "Delete Categor";
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            Are you sure to delete this Category ?

        </h3>
    </div>
    <!-- /.card-header -->

    <div class="card-body" style="display: block;">
        <form method="post" asp-action="Delete" enctype="multipart/form-data">
            <div class="col-6">
                <p>Category Name : @Model.Name </p>
            </div>
            <a id="btnClose" asp-action="Index" class="btn btn-secondary float-right mt-3"><i class="ace-icon fa fa-minus-circle"></i> Cancel</a>

            <button class="btn btn-danger float-right mt-3" type="submit" value="Confirm">
                Confirm
            </button>

        </form>
        <!-- ./col -->
    </div>
    <!-- /.row -->
</div>