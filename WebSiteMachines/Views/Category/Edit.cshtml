@using WebSiteMachines.ViewModels.Category
@model CategoryUpsertViewModel

@{
    ViewData["Title"] = "EditCategory";
    Layout = "_AdminLayout";
}
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Title</label>
        <input asp-for="Name" class="form-control" placeholder="Name Of Category">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter Descriptionl">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Image</label>
        @if (Model.CurrentImageUrl != null)
        {
            <div>
                <img src="@Model.CurrentImageUrl" alt="Current Image" style="max-height: 150px; max-width: 150px;" />
                <p>Current Image</p>
            </div>
        }
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a id="btnClose" asp-action="Index" class="btn btn-sm btn-secondary m-1 pl-3 pr-3"><i class="ace-icon fa fa-minus-circle"></i>Cancel</a>

</form>
