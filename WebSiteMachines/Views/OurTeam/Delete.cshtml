@model OurTeam

@{
    ViewData["Title"] = "Delete" + " " + Model.Name;
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            Are you sure to delete this Member ?

        </h3>
    </div>
    <!-- /.card-header -->

    <div class="card-body" style="display: block;">
        <form method="post" asp-action="Delete" enctype="multipart/form-data">
            <div class="col-6">
                <p>Member Name : @Model.Name </p>
                <p>Member Position : @Model.position </p>
               
            </div>

            <button class="btn btn-danger float-right mt-3" type="submit" value="Confirm">
                Confirm
            </button>
        </form>
        <!-- ./col -->
    </div>
    <!-- /.row -->
</div>