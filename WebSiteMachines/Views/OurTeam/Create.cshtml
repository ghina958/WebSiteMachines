@using Web.ViewModels.OurTeam
@model OurTeamUpsertViewModel

@{
    ViewData["Title"] = "Create Our Team";
    Layout = "_AdminLayout";
}
<form method="post" asp-action="Create" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter Full Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="position">position</label>
        <input asp-for="position" class="form-control" placeholder="Enter position">
        <span asp-validation-for="position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FileImage">Image</label>
        <input asp-for="FileImage" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="FileImage" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
    <a id="btnClose"  asp-action="Index" class="btn btn-sm btn-secondary m-1 pl-3 pr-3"><i class="ace-icon fa fa-minus-circle"></i> Cancel</a>

</form>
